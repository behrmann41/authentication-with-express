extends ../layout

block content
  .container
    h1= title
    .row
      .col-md-4
        include errors.jade
        form(action='/signup' method='post')
          label(for='email') Email
          input.form-control(type='email' id='email' name='email')
          label(for='password') Password
          input.form-control(type='text' id='password' name='password')
          label(for='passconfirm') Password Confirmation
          input.form-control(type='text' id='passconfirm' name='passconfirm')
          p
          input(type='submit' value='Sign Up' id='signupbtn')